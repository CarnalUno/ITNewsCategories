  "Integrated Systems": { main: "bg-yellow-600", sub: "bg-yellow-400" },
  "Data Management": { main: "bg-purple-600", sub: "bg-purple-400" },
  "Networking": { main: "bg-pink-600", sub: "bg-pink-400" },
  "Cloud": { main: "bg-indigo-600", sub: "bg-indigo-400" },
